<section id="contact" class="py-20 bg-ancient-stone/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="font-cinzel text-4xl text-ancient-gold mb-4">Contact Us</h2>
      <p class="text-white/80">Have questions about ancient history? We'd love to hear from you.</p>
    </div>

    <div class="max-w-3xl mx-auto">
      <form class="space-y-6 bg-ancient-stone/50 p-8 rounded-lg backdrop-blur-sm border border-ancient-gold/20">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label for="firstName" class="block text-sm font-medium text-ancient-sand mb-2">First Name</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              required
              class="w-full px-4 py-2 bg-ancient-stone/50 border border-ancient-gold/30 rounded-md text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-ancient-gold/50 focus:border-transparent transition-all duration-300"
            />
          </div>
          <div>
            <label for="lastName" class="block text-sm font-medium text-ancient-sand mb-2">Last Name</label>
            <input
              type="text"
              id="lastName"
              name="lastName"
              required
              class="w-full px-4 py-2 bg-ancient-stone/50 border border-ancient-gold/30 rounded-md text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-ancient-gold/50 focus:border-transparent transition-all duration-300"
            />
          </div>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-ancient-sand mb-2">Email Address</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 bg-ancient-stone/50 border border-ancient-gold/30 rounded-md text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-ancient-gold/50 focus:border-transparent transition-all duration-300"
          />
        </div>

        <div>
          <label for="subject" class="block text-sm font-medium text-ancient-sand mb-2">Subject</label>
          <select
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-2 bg-ancient-stone/50 border border-ancient-gold/30 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-ancient-gold/50 focus:border-transparent transition-all duration-300"
          >
            <option value="" disabled selected class="bg-ancient-stone">Select a topic</option>
            <option value="general" class="bg-ancient-stone">General Inquiry</option>
            <option value="egypt" class="bg-ancient-stone">Ancient Egypt</option>
            <option value="greece" class="bg-ancient-stone">Ancient Greece</option>
            <option value="rome" class="bg-ancient-stone">Roman Empire</option>
            <option value="mesopotamia" class="bg-ancient-stone">Mesopotamia</option>
          </select>
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-ancient-sand mb-2">Message</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            class="w-full px-4 py-2 bg-ancient-stone/50 border border-ancient-gold/30 rounded-md text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-ancient-gold/50 focus:border-transparent transition-all duration-300"
          ></textarea>
        </div>

        <div class="flex justify-center">
          <button
            type="submit"
            class="px-8 py-3 bg-ancient-gold text-ancient-stone rounded-full hover:bg-ancient-gold/90 transition-colors duration-300 font-semibold shadow-lg hover:shadow-ancient-gold/20 hover:scale-105 transform transition-transform"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>
  </div>
</section>